# Copy to .env and fill in your values

# Logging
LOG_TO_SCREEN=true    # Output logs to terminal
ENABLE_LOGGING=false  # Also write to logs/<script>.log

# Cloudflare - for update-cf-github-ips.sh
CF_ACCOUNT_ID=
CF_API_TOKEN=
CF_LIST_ID=

# Backups - general
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=7           # Retention for database backups (default: 7)
BACKUP_FILES_RETENTION_DAYS=30    # Retention for file storage backups (default: 30)

# Backups - UUIDs by type (comma-separated)
# Auto-detects whether UUID is a service or application
# Find UUIDs: ls /data/coolify/services/ /data/coolify/applications/
#
# Leave all empty for AUTO-DISCOVERY mode:
# - Finds all running Coolify services/apps
# - Tries all backup methods (MySQL, PostgreSQL, SQLite, Files)
# - Skips methods that don't apply
BACKUP_MYSQL=""
BACKUP_POSTGRES=""
BACKUP_SQLITE=""
BACKUP_FILES=""       # File storage volumes (uploads, media, etc.)

# Restore settings
RESTORE_PRE_BACKUP=true       # Backup current state before restore (default: true)

# Remote sync (rsync or rclone)
REMOTE_SYNC_METHOD=rsync
RSYNC_TARGET=
RCLONE_REMOTE=

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Discord webhook (sends summary after each backup)
DISCORD_WEBHOOK_URL=

# Email notifications (detailed reports on failures)
SMTP_HOST=                        # e.g., smtp.gmail.com
SMTP_PORT=587                     # Default: 587 (TLS)
SMTP_USER=                        # Your email/username
SMTP_PASS=                        # App password (not your regular password)
EMAIL_FROM=                       # Sender address (optional, defaults to vps-scripts@hostname)
EMAIL_TO=                         # Recipient address
NOTIFY_EMAIL_ALWAYS=false         # Set to true to receive emails on success too

# Healthcheck monitoring (dead man's switch)
# Use services like healthchecks.io, Uptime Kuma, or Cronitor
# The URL will be pinged with /start at beginning, and /fail or success ping at end
HEALTHCHECK_URL=                  # e.g., https://hc-ping.com/your-uuid
