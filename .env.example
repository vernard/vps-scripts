# Copy to .env and fill in your values

# Logging (writes to logs/<script>.log when true)
ENABLE_LOGGING=false

# Cloudflare - for update-cf-github-ips.sh
CF_ACCOUNT_ID=
CF_API_TOKEN=
CF_LIST_ID=

# Backups - general
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=7

# Backups - Coolify applications (comma-separated UUIDs)
BACKUP_APP_POSTGRES=""
BACKUP_APP_MYSQL=""

# Backups - Coolify services (comma-separated UUIDs)
BACKUP_SERVICE_POSTGRES=""
BACKUP_SERVICE_MYSQL=""

# Remote sync (rsync or rclone)
REMOTE_SYNC_METHOD=rsync
RSYNC_TARGET=
RCLONE_REMOTE=
