# Copy to .env and fill in your values

# Logging
LOG_TO_SCREEN=true    # Output logs to terminal
ENABLE_LOGGING=false  # Also write to logs/<script>.log

# Cloudflare - for update-cf-github-ips.sh
CF_ACCOUNT_ID=
CF_API_TOKEN=
CF_LIST_ID=

# Backups - general
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=7

# Backups - UUIDs by type (comma-separated)
# Auto-detects whether UUID is a service or application
# Find UUIDs: ls /data/coolify/services/ /data/coolify/applications/
BACKUP_MYSQL=""
BACKUP_POSTGRES=""
BACKUP_SQLITE=""
BACKUP_FILES=""       # File storage volumes (uploads, media, etc.)

# Remote sync (rsync or rclone)
REMOTE_SYNC_METHOD=rsync
RSYNC_TARGET=
RCLONE_REMOTE=
