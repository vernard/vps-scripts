# Logging
ENABLE_LOGGING=false

# Cloudflare (for update-cf-github-ips.sh)
CF_ACCOUNT_ID=
CF_API_TOKEN=
CF_LIST_ID=

# Backups
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=7

# Applications to backup (comma-separated UUIDs)
# Located at /data/coolify/applications/{uuid}/
BACKUP_APP_POSTGRES=""
BACKUP_APP_MYSQL=""

# Services to backup (comma-separated UUIDs)
# Located at /data/coolify/services/{uuid}/
BACKUP_SERVICE_POSTGRES=""
BACKUP_SERVICE_MYSQL=""

# Remote sync (choose one method)
REMOTE_SYNC_METHOD=rsync  # rsync or rclone
RSYNC_TARGET=user@nas:/backups/vps
RCLONE_REMOTE=gdrive:backups/vps
